interface Show {
    show(a: Show);
}

type Person = {
    name: string,
    age: number
};

instanceof Show for Person {
    show(a: Person) {
        console.log("Person:", a.name);
    }
}

type Animal = {
    name: string,
    species: string
};

instanceof Show for Animal {
    show(a: Animal) {
        console.log("Animal:", a.name);
    }
}

function showName<'a>(a: {'a})
where
    (name: string) keyof 'a,
    {'a} instanceof Show
{
    a.show()
}

showName({name: "John", age: 42});
showName({name: "Cheems", species: "doge"});
