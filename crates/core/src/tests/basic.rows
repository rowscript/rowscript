/* Triple slash starts a comment group as the docstring. */

/// Empty function with an unspecified return type.
f0() := {}

/// A global variable.
v0 := f0()

/// Function with parameters and a return type.
f1[T, U](a u64, b string) boolean := false

v1 := f1[i32, f64](42, "hello")

/// This function shows all control flow constructs.
f2() := {
    // A local variable.
    c := 42;

    // An if-guard statement.
    if c == 0 {
        return false
    }

    // An if statement.
    if c == 1 {
        return false
    } else if c == 2 {
        return false
    } else {
        return true
    }

    false
}
